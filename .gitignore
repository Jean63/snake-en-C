void carte()
{
    int hauteur;
    int j;
    hauteur = 18;
    j=0;

    printf("########################################");
    while (j<hauteur)
    {
        printf("\n#                                      #");
        j++;
    }
    printf("\n########################################");
}

void pomme()
{
    const int minx = 1;
    const int maxx = 40;
    const int miny = 1;
    const int maxy = 20;

    int aleatx;
    int aleaty;


    aleatx = 0;
    aleaty = 0;
	srand(time(NULL)); // initialisation de rand

    aleatx = rand()%(maxx-minx)+minx;
    aleaty = rand()%(maxy-miny)+miny;
}

